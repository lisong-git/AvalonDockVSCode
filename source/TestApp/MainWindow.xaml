  xmlns:local="clr-namespace:TestApp"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="MainWindow"
  Width="800"
  Height="480"
  Background="{DynamicResource HeaderBackground}"
  Foreground="{DynamicResource WindowForeground}"
  UseLayoutRounding="False">
