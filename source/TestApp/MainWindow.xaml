		</Style>
	</Window.Style>-->

  <Grid x:Name="layoutRoot">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Menu Grid.Row="0">
      <MenuItem Header="Edit">
        <MenuItem Command="Undo" />
        <MenuItem Command="Redo" />
        <Separator />
        <MenuItem Command="Cut" />
        <MenuItem Command="Copy" />
        <MenuItem Command="Paste" />
      </MenuItem>
      <MenuItem Header="Layout">
        <MenuItem Header="Save">
          <MenuItem Click="OnSaveLayout" Header="Layout_1" />
          <MenuItem Click="OnSaveLayout" Header="Layout_2" />
          <MenuItem Click="OnSaveLayout" Header="Layout_3" />
          <MenuItem Click="OnSaveLayout" Header="Layout_4" />
        </MenuItem>
        <MenuItem Header="Load">
          <MenuItem Click="OnLoadLayout" Header="Layout_1" />
          <MenuItem Click="OnLoadLayout" Header="Layout_2" />
          <MenuItem Click="OnLoadLayout" Header="Layout_3" />
          <MenuItem Click="OnLoadLayout" Header="Layout_4" />
        </MenuItem>
        <MenuItem Click="OnDumpToConsole" Header="Dump To Console" />
        <MenuItem Click="OnUnloadManager" Header="Unload Manager" />
        <MenuItem Click="OnLoadManager" Header="Load Manager" />
        <MenuItem Click="OnShowHeader" Header="Show header" />
      </MenuItem>
      <MenuItem Header="Tools">
        <MenuItem Click="OnShowWinformsWindow" Header="WinForms Window" />
        <MenuItem Click="OnShowToolWindow1" Header="Tool Window1" />
        <MenuItem Click="OnNewFloatingWindow" Header="New floating window" />
      </MenuItem>
    </Menu>
    <DockingManager
      x:Name="dockManager"
      Grid.Row="1"
      Grid.Column="1"
      AllowMixedOrientation="True"
      AutoWindowSizeWhenOpened="True"
      DockPanel.Dock="Right"
      DocumentClosing="DockManager_DocumentClosing"
      IsVirtualizingAnchorable="True"
      IsVirtualizingDocument="True">
      <DockingManager.Theme>
        <Vs2013DarkTheme />
      </DockingManager.Theme>
      <DockingManager.DocumentHeaderTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <Image Margin="0,0,4,0" Source="{Binding IconSource}" />
            <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
          </StackPanel>
        </DataTemplate>
      </DockingManager.DocumentHeaderTemplate>
      <LayoutRoot PropertyChanged="OnLayoutRootPropertyChanged">
        <LayoutPanel Orientation="Horizontal">
          <LayoutAnchorableGroupPane
            Name="PART_PrimarySideBar"
            DockMinWidth="20"
            DockWidth="120">
            <LayoutAnchorableGroup Name="A" Orientation="Vertical">
              <LayoutAnchorable
                Title="自定义4"
                ContentId="Primary_G1_A1"
                IsExpanded="False">
                <StackPanel Orientation="Vertical">
                  <TextBox Text="内容1" />
                  <TextBox Text="内容2" />
                </StackPanel>
              </LayoutAnchorable>
              <LayoutAnchorable
                Title="自定义5"
                ContentId="Primary_G1_A2"
                IsExpanded="False">
                <TextBox Text="P_G1_A2内容5" />
              </LayoutAnchorable>
              <LayoutAnchorable
                Title="自定义6"
                ContentId="Primary_G1_A3"
                IsExpanded="True">
                <StackPanel Orientation="Vertical">
                  <TextBox Text="内容31" />
                  <TextBox Text="内容32" />
                </StackPanel>
              </LayoutAnchorable>
            </LayoutAnchorableGroup>
            <LayoutAnchorableGroup Name="B" Orientation="Vertical">
              <LayoutAnchorable
                Title="自定义7"
                ContentId="Primary_G2_A1"
                IsExpanded="True">
                <StackPanel Orientation="Vertical">
                  <TextBox Text="内容1" />
                  <TextBox Text="内容2" />
                </StackPanel>
              </LayoutAnchorable>
              <LayoutAnchorable
                Title="自定义8"
                ContentId="Primary_G2_A2"
                IsExpanded="True">
                <TextBox Text="P_G2_A2内容5" />
              </LayoutAnchorable>
            </LayoutAnchorableGroup>
          </LayoutAnchorableGroupPane>

          <LayoutPanel Orientation="Vertical">
            <LayoutDocumentPaneGroup>
              <LayoutDocumentPane x:Name="LayoutDocumentPane">
                <LayoutDocument
                  Title="Document 1"
                  ContentId="document1"
                  IconSource="/TestApp;component/Images/alarm-clock-blue.png">
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition />
                      <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button
                      Height="Auto"
                      VerticalAlignment="Top"
                      Click="AddTwoDocuments_click"
                      Content="Click to add 2 documents" />
                    <TextBox Grid.Row="1" Text="Document 1 Content" />
                  </Grid>
                </LayoutDocument>
                <LayoutDocument Title="Document 2" ContentId="document2">
                  <TextBox
                    Background="Transparent"
                    BorderThickness="1"
                    Foreground="White"
                    Text="{Binding TestTimer, Mode=OneWay, StringFormat='Document 2 Attached to Timer ->\{0\}'}" />
                </LayoutDocument>
              </LayoutDocumentPane>
            </LayoutDocumentPaneGroup>
            <LayoutAnchorableGroupPane
              Name="PART_Panel"
              DockHeight="120"
              DockMinWidth="20"
              DockWidth="120"
              Orientation="Horizontal">
              <LayoutAnchorableGroup Name="C" Orientation="Horizontal">
                <LayoutAnchorable
                  Title="Pane1"
                  ContentId="P_G1_A1"
                  IsExpanded="False">
                  <StackPanel
                    HorizontalAlignment="Stretch"
                    Background="Green"
                    Orientation="Vertical">
                    <TextBox Text="内容41" />
                    <TextBox Text="内容42" />
                  </StackPanel>
                </LayoutAnchorable>
                <LayoutAnchorable
                  Title="Pane2"
                  ContentId="P_G1_A2"
                  IsExpanded="False">
                  <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                    <TextBox Text="内容51" />
                    <TextBox Text="内容52" />
                    <TextBox Text="内容53" />
                  </StackPanel>
                </LayoutAnchorable>
                <LayoutAnchorable
                  Title="Pane3"
                  ContentId="P_G1_A3"
                  IsExpanded="False">
                  <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                    <TextBox Text="内容61" />
                    <TextBox Text="内容62" />
                  </StackPanel>
                </LayoutAnchorable>
              </LayoutAnchorableGroup>

              <LayoutAnchorableGroup Name="D" Orientation="Vertical">
                <LayoutAnchorable
                  Title="Pane17"
                  ContentId="P_G2_A1"
                  IsExpanded="True">
                  <StackPanel Orientation="Vertical">
                    <TextBox Text="内容1" />
                    <TextBox Text="内容2" />
                  </StackPanel>
                </LayoutAnchorable>
                <LayoutAnchorable
                  Title="Pane18"
                  ContentId="P_G2_A2"
                  IsExpanded="True">
                  <TextBox Text="P_G2_A2 内容5" />
                </LayoutAnchorable>
              </LayoutAnchorableGroup>
            </LayoutAnchorableGroupPane>
          </LayoutPanel>

          <LayoutAnchorableGroupPane
            Name="PART_SecondarySideBar"
            DockMinWidth="20"
            DockWidth="120">
            <LayoutAnchorableGroup Name="E" Orientation="Vertical">
              <LayoutAnchorable
                Title="自定义4"
                ContentId="S_G1_A1"
                IsExpanded="False">
                <StackPanel Orientation="Vertical">
                  <TextBox Text="内容1" />
                  <TextBox Text="内容2" />
                </StackPanel>
              </LayoutAnchorable>
              <LayoutAnchorable
                Title="自定义5"
                ContentId="S_G1_A2"
                IsExpanded="False">
                <TextBox Text="S_G1_A2内容5" />
              </LayoutAnchorable>
              <LayoutAnchorable
                Title="自定义6"
                ContentId="S_G1_A3"
                IsExpanded="True">
                <StackPanel Orientation="Vertical">
                  <TextBox Text="内容31" />
                  <TextBox Text="内容32" />
                </StackPanel>
              </LayoutAnchorable>
            </LayoutAnchorableGroup>
            <LayoutAnchorableGroup Name="F" Orientation="Vertical">
              <LayoutAnchorable
                Title="自定义7"
                ContentId="S_G2_A1"
                IsExpanded="True">
                <StackPanel Orientation="Vertical">
                  <TextBox Text="内容1" />
                  <TextBox Text="内容2" />
                </StackPanel>
              </LayoutAnchorable>
              <LayoutAnchorable
                Title="自定义8"
                ContentId="S_G2_A2"
                IsExpanded="True">
                <TextBox Text="S_G2_A2内容5" />
              </LayoutAnchorable>
            </LayoutAnchorableGroup>
          </LayoutAnchorableGroupPane>
        </LayoutPanel>

        <LayoutRoot.ActivityBar>
          <LayoutActivityBar />
        </LayoutRoot.ActivityBar>
      </LayoutRoot>
    </DockingManager>
  </Grid>
</Window>
